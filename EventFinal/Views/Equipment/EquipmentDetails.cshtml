@model EventFinal.Models.Equipment;
@{
    ViewData["Title"] = "EquipmentDetails";
}
@section Style {
    <style>
        .imageThumbnail {
            height: 200px;
            width: auto;
        }
    </style>
}
    <h1>Equipment Details</h1>

    <div>
        <h4>Equipment</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EquipmentName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EquipmentName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Createdby)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Createdby)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Createdate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Createdate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EquipmentCost)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EquipmentCost)
            </dd>
        </dl>
        <div class="row card-deck">
            @{
            var photoPath = "~/UploadEquipment/" + (Model.EquipmentFilePath ?? "noimage.jpg");
        }
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@Model.EquipmentName</h3>
            </div>

            <img class="card-img-top imageThumbnail" src="@photoPath"
                 asp-append-version="true" />

            <div class="card-footer text-center">
                <a href="#" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Edit", "EquipmentEdit", new {  id = Model.EquipmentID  }) |
    <a asp-action="ShowEquipment">Back to List</a>
</div>
